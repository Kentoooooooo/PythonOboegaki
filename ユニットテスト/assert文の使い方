import unittest


class TestStringMethods(unittest.TestCase):

    def test_upper(self):
        """str.upper()ãƒ¡ã‚½ãƒƒãƒ‰ãŒå¤§æ–‡å­—ã‚¢ãƒ«ãƒ•ã‚¡ãƒ™ãƒƒãƒˆã‚’è¿”ã™ã‹ãƒ†ã‚¹ãƒˆ."""
        self.assertEqual('foo'.upper(), 'FOO')

    def test_not_upper(self):
        """str.upper()ãƒ¡ã‚½ãƒƒãƒ‰ãŒæ–‡å­—åˆ—ã‚’ãã®ã¾ã¾è¿”ã•ãªã„ã‹ã‚’ãƒ†ã‚¹ãƒˆ."""
        self.assertNotEqual('foo'.upper(), 'foo')

    def test_is_digit(self):
        """str.isdigit()ãƒ¡ã‚½ãƒƒãƒ‰ãŒå…¨ã¦æ•°å­—ã®æ–‡å­—åˆ—ã®å ´åˆã¯Trueã‚’è¿”ã™ã‹ãƒ†ã‚¹ãƒˆ."""
        self.assertTrue('123'.isdigit())

    def test_is_not_digit(self):
        """str.isdigit()ãƒ¡ã‚½ãƒƒãƒ‰ãŒæ•°å­—ä»¥å¤–ã®æ–‡å­—ãŒæ··ã–ã£ãŸæ–‡å­—åˆ—ã®å ´åˆã¯Falseã‚’è¿”ã™ã‹ãƒ†ã‚¹ãƒˆ."""
        self.assertFalse('123ppap'.isdigit())
